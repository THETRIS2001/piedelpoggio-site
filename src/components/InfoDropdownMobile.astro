<style>
  /* Stili personalizzati per il menu mobile scrollabile */
  .mobile-scroll-container {
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: rgba(59, 130, 246, 0.5) rgba(243, 244, 246, 0.3);
  }

  .mobile-scroll-container::-webkit-scrollbar {
    width: 6px;
  }

  .mobile-scroll-container::-webkit-scrollbar-track {
    background: rgba(243, 244, 246, 0.3);
    border-radius: 3px;
  }

  .mobile-scroll-container::-webkit-scrollbar-thumb {
    background: rgba(59, 130, 246, 0.5);
    border-radius: 3px;
  }

  .mobile-scroll-container::-webkit-scrollbar-thumb:hover {
    background: rgba(59, 130, 246, 0.7);
  }

  /* Assicura che il menu sia scrollabile quando aperto */
  .mobile-info-menu.open {
    max-height: 60vh !important;
    overflow-y: auto !important;
    overflow-x: hidden !important;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const trigger = document.querySelector('.mobile-info-trigger');
    const menu = document.querySelector('.mobile-info-menu');
    const arrow = document.querySelector('.mobile-info-arrow');
    let isOpen = false;

    if (!trigger || !menu || !arrow) return;

    // Toggle dropdown
    const toggleDropdown = () => {
      isOpen = !isOpen;
      trigger.setAttribute('aria-expanded', isOpen.toString());
      
      if (isOpen) {
        // Calcola l'altezza massima disponibile (60% della viewport)
        const maxHeight = Math.min(menu.scrollHeight, window.innerHeight * 0.6);
        menu.style.maxHeight = maxHeight + 'px';
        menu.classList.add('open');
        arrow.style.transform = 'rotate(180deg)';
        
        // Forza il reflow per assicurare che lo scroll funzioni
        setTimeout(() => {
          menu.style.overflowY = 'auto';
          menu.style.overflowX = 'hidden';
        }, 50);
      } else {
        menu.style.maxHeight = '0px';
        menu.classList.remove('open');
        arrow.style.transform = 'rotate(0deg)';
        menu.style.overflowY = 'hidden';
        menu.style.overflowX = 'hidden';
      }
    };

    // Click on trigger
    trigger.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      toggleDropdown();
    });

    // Close on outside click
    document.addEventListener('click', (e) => {
      if (isOpen && !trigger.contains(e.target) && !menu.contains(e.target)) {
        toggleDropdown();
      }
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        toggleDropdown();
      }
    });

    // Close dropdown when clicking on menu items
    const menuLinks = menu.querySelectorAll('a');
    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (isOpen) {
          toggleDropdown();
        }
      });
    });

    // Migliora l'accessibilità per la navigazione da tastiera
    trigger.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggleDropdown();
      }
    });

    // Gestisce il focus per l'accessibilità
    menu.addEventListener('keydown', (e) => {
      const focusableElements = menu.querySelectorAll('a, button, [tabindex]:not([tabindex="-1"])');
      const firstElement = focusableElements[0];
      const lastElement = focusableElements[focusableElements.length - 1];

      if (e.key === 'Tab') {
        if (e.shiftKey) {
          if (document.activeElement === firstElement) {
            e.preventDefault();
            lastElement.focus();
          }
        } else {
          if (document.activeElement === lastElement) {
            e.preventDefault();
            firstElement.focus();
          }
        }
      }
    });

    // Gestisce il ridimensionamento della finestra
    window.addEventListener('resize', () => {
      if (isOpen) {
        const maxHeight = Math.min(menu.scrollHeight, window.innerHeight * 0.6);
        menu.style.maxHeight = maxHeight + 'px';
      }
    });
  });
</script>