<style>
  .mobile-dropdown-container {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 8px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(229, 231, 235, 0.8);
    height: 400px;
    overflow: hidden;
    z-index: 50;
    min-width: 280px;
  }

  .mobile-dropdown-content {
    height: 400px;
    overflow-y: scroll;
    overflow-x: hidden;
    padding: 16px 16px 16px 16px;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
  }

  .menu-section {
    margin-bottom: 24px;
  }

  .menu-section:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .section-title {
    font-size: 12px;
    font-weight: 600;
    color: #9CA3AF;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 12px;
    padding-left: 12px;
  }

  .menu-links {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .menu-link {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    border-radius: 12px;
    color: #4B5563;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.2s ease;
  }

  .menu-link:hover {
    background-color: #EFF6FF;
    color: #2563EB;
  }

  .menu-link svg {
    flex-shrink: 0;
  }

  /* Scrollbar personalizzata */
  .mobile-dropdown-content::-webkit-scrollbar {
    width: 6px;
  }

  .mobile-dropdown-content::-webkit-scrollbar-track {
    background: #F3F4F6;
    border-radius: 3px;
  }

  .mobile-dropdown-content::-webkit-scrollbar-thumb {
    background: #D1D5DB;
    border-radius: 3px;
  }

  .mobile-dropdown-content::-webkit-scrollbar-thumb:hover {
    background: #9CA3AF;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.querySelector('.mobile-info-trigger');
    const dropdown = document.querySelector('.mobile-dropdown-container');
    const arrow = document.querySelector('.mobile-info-arrow');
    let isOpen = false;

    if (!button || !dropdown || !arrow) return;

    button.addEventListener('click', (e) => {
      e.preventDefault();
      isOpen = !isOpen;
      
      if (isOpen) {
        dropdown.style.display = 'block';
        arrow.style.transform = 'rotate(180deg)';
        button.setAttribute('aria-expanded', 'true');
      } else {
        dropdown.style.display = 'none';
        arrow.style.transform = 'rotate(0deg)';
        button.setAttribute('aria-expanded', 'false');
      }
    });

    // Chiudi quando si clicca fuori
    document.addEventListener('click', (e) => {
      if (isOpen && !button.contains(e.target) && !dropdown.contains(e.target)) {
        dropdown.style.display = 'none';
        arrow.style.transform = 'rotate(0deg)';
        button.setAttribute('aria-expanded', 'false');
        isOpen = false;
      }
    });
  });
</script>