---
import { formatDate } from '../utils/date';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  href: string;
  date?: Date;
  category?: string;
}

const { title, description, image, href, date, category } = Astro.props;
---

  <!-- Enhanced card with modern design and uniform height -->
  <article class="group relative bg-white rounded-2xl shadow-soft hover:shadow-xl transition-all duration-500 overflow-hidden border border-gray-100/50 hover:border-primary-200/50 hover:-translate-y-2 backdrop-blur-sm h-full flex flex-col">
    <!-- Image container with overlay -->
    <div class="relative overflow-hidden rounded-t-2xl flex-shrink-0">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-48 object-cover transition-transform duration-700 group-hover:scale-110"
        loading="lazy"
      />
      <!-- Gradient overlay for better text readability -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      
      <!-- Category badge -->
      {category && (
        <div class="absolute top-4 left-4 text-white px-3 py-1 rounded-full text-sm font-medium shadow-soft" style="background-color: #0ea5e9;">
          {category}
        </div>
      )}
    </div>
  
  <!-- Content section with flex-grow to push footer to bottom -->
  <div class="relative z-10 p-6 space-y-4 flex-grow flex flex-col">
    <!-- Title without gradient text on hover -->
    <h3 class="text-xl font-bold text-gray-900 transition-all duration-300 leading-tight">
      {title}
    </h3>
    
    <!-- Description with improved typography -->
    {description && (
      <p class="text-gray-600 leading-relaxed line-clamp-4 group-hover:text-gray-700 transition-colors duration-300 flex-grow">
        {description}
      </p>
    )}
    
    <!-- Footer with date and enhanced CTA - always at bottom -->
    <div class="flex items-center justify-between pt-4 border-t border-gray-100/50 group-hover:border-primary-200/50 transition-colors duration-300 mt-auto">
      {date && (
        <time class="text-sm text-gray-500 font-medium group-hover:text-primary-600 transition-colors duration-300">
          {formatDate(date)}
        </time>
      )}
      
      <!-- Enhanced CTA with icon and animation -->
      <a 
        href={href} 
        class="inline-flex items-center gap-2 text-white font-medium transition-all duration-300 hover:shadow-lg hover:scale-105 px-4 py-2 rounded-xl"
        style="background: linear-gradient(135deg, #0ea5e9, #0284c7);"
        aria-label={`Leggi di più su ${title}`}
      >
        <span>Leggi di più</span>
        <svg 
          class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
  
  <!-- Subtle glow effect on hover -->
  <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-primary-500/5 to-secondary-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
</article>

<style>
  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>