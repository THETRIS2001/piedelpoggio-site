---
export const prerender = true;

import DefaultLayout from '../layouts/DefaultLayout.astro';
---

<DefaultLayout title="Suggerisci un'idea - Piedelpoggio">
  <!-- Hero Section -->
  <section class="relative min-h-[40vh] flex items-center justify-center overflow-hidden pt-16">
    <!-- Background with gradient -->
    <div class="absolute inset-0 bg-gradient-to-b from-yellow-100/60 via-yellow-50/40 to-transparent"></div>
    
    <!-- Decorative elements -->
    <div class="absolute top-10 left-10 w-32 h-32 bg-yellow-200/30 rounded-full blur-2xl animate-float"></div>
    <div class="absolute bottom-10 right-10 w-40 h-40 bg-amber-200/30 rounded-full blur-2xl animate-float" style="animation-delay: -3s;"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-r from-yellow-100/20 to-amber-100/20 rounded-full blur-3xl"></div>
    
    <div class="relative z-10 container mx-auto px-4 text-center">
      <div class="animate-fade-in">
        <!-- Icona e Titolo centrati -->
        <div class="flex items-center justify-center mb-8">
          <div class="w-20 h-20 bg-gradient-to-br from-yellow-600 to-amber-600 rounded-2xl flex items-center justify-center shadow-xl mr-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            <span class="bg-gradient-to-r from-yellow-900 via-yellow-700 to-amber-600 bg-clip-text text-transparent">
              SUGGERISCI UN'IDEA
            </span>
          </h1>
        </div>
        <div class="w-32 h-1.5 bg-gradient-to-r from-yellow-500 via-yellow-600 to-amber-500 rounded-full mx-auto mb-8"></div>
        
        <!-- Descrizione centrata sotto -->
        <p class="text-xl md:text-2xl text-gray-700 font-medium max-w-2xl mx-auto leading-relaxed">
          Hai un'idea per migliorare la nostra comunità? Condividila con noi!
        </p>
      </div>
    </div>
  </section>

  <!-- Form Section -->
  <section class="py-16 px-4 sm:px-6 lg:px-8 relative">
    <!-- Decorative background elements -->
    <div class="absolute top-10 right-10 w-80 h-80 bg-gradient-to-bl from-primary-200/15 to-transparent rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-10 left-10 w-96 h-96 bg-gradient-to-tr from-secondary-200/15 to-transparent rounded-full blur-3xl animate-float" style="animation-delay: -4s;"></div>
    
    <div class="max-w-4xl mx-auto relative z-10">
      <!-- Form Card -->
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8 md:p-12 animate-slide-up" style="animation-delay: 0.2s;">
        <div class="flex items-center space-x-4 mb-8">
          <div class="w-12 h-12 bg-gradient-to-r from-secondary-500 to-secondary-600 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900">La tua idea conta</h2>
        </div>
        
        <p class="text-gray-700 mb-8 text-lg">
          Compila il form sottostante per condividere la tua proposta con i membri della Pro Loco di Piedelpoggio
        </p>

        <form class="space-y-6" method="POST" action="/api/suggerisci-idea" id="idea-form">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Nome -->
            <div class="animate-slide-up" style="animation-delay: 0.4s;">
              <label for="nome" class="block text-sm font-semibold text-gray-700 mb-2">
                Nome
              </label>
              <input 
                type="text" 
                id="nome" 
                name="nome" 
                required
                class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="Il tuo nome"
              >
            </div>

            <!-- Cognome -->
            <div class="animate-slide-up" style="animation-delay: 0.5s;">
              <label for="cognome" class="block text-sm font-semibold text-gray-700 mb-2">
                Cognome
              </label>
              <input 
                type="text" 
                id="cognome" 
                name="cognome" 
                required
                class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="Il tuo cognome"
              >
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Email -->
            <div class="animate-slide-up" style="animation-delay: 0.6s;">
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                Email (opzionale)
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="la-tua-email@esempio.com"
              >
            </div>

            <!-- Telefono -->
            <div class="animate-slide-up" style="animation-delay: 0.7s;">
              <label for="telefono" class="block text-sm font-semibold text-gray-700 mb-2">
                Telefono (opzionale)
              </label>
              <input 
                type="tel" 
                id="telefono" 
                name="telefono" 
                class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="123 456 7890"
              >
            </div>
          </div>

          <!-- Idea -->
          <div class="animate-slide-up" style="animation-delay: 0.8s;">
            <label for="idea" class="block text-sm font-semibold text-gray-700 mb-2">
              La tua idea *
            </label>
            <textarea 
              id="idea" 
              name="idea" 
              required
              minlength="10"
              maxlength="2000"
              rows="6"
              class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80 resize-none"
              placeholder="Descrivi la tua idea (minimo 10 caratteri)"
            ></textarea>
            <div class="flex justify-between items-center mt-2">
              <p class="text-sm text-gray-500">
                Minimo 10 caratteri, massimo 2000
              </p>
              <span id="char-count" class="text-sm text-gray-500">0/2000</span>
            </div>
            <div id="char-error" class="text-red-500 text-sm mt-1 hidden">
              Il testo deve contenere almeno 10 caratteri
            </div>
          </div>

          <!-- Submit Button -->
          <div class="animate-slide-up" style="animation-delay: 0.9s;">
            <button 
              type="submit"
              class="w-full bg-gradient-to-r from-secondary-600 to-secondary-700 hover:from-secondary-700 hover:to-secondary-800 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-[1.02] hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-secondary-500 focus:ring-offset-2 group relative overflow-hidden"
            >
              <span class="absolute inset-0 bg-gradient-to-r from-secondary-700/80 to-secondary-800/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
              <span class="relative flex items-center justify-center gap-2">
                Invia la tua idea
              </span>
            </button>
          </div>
        </form>

          <!-- Info aggiuntive -->
          <div class="mt-6 p-4 bg-gradient-to-r from-primary-50 to-secondary-50 rounded-2xl border border-primary-200/50 animate-slide-up" style="animation-delay: 0.8s;">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-primary-500 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="text-sm text-gray-600 leading-relaxed">
                <p class="font-semibold text-gray-700 mb-1">Informazioni:</p>
                <ul class="space-y-1">
                  <li>• Le tue informazioni saranno trattate con la massima riservatezza</li>
                  <li>• I membri della Pro Loco valuteranno la tua idea</li>
                  <li>• Potresti essere contattato per ulteriori dettagli</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>

<script>
  // Character counter for textarea
  const textarea = document.getElementById('idea') as HTMLTextAreaElement;
  const charCount = document.getElementById('char-count');
  const charError = document.getElementById('char-error');
  const form = document.getElementById('idea-form') as HTMLFormElement;
  
  if (textarea && charCount) {
    textarea.addEventListener('input', () => {
      const currentLength = textarea.value.length;
      charCount.textContent = `${currentLength}/2000`;
      
      // Hide error message when typing
      if (charError && currentLength >= 10) {
        charError.classList.add('hidden');
      }
      
      // Change color based on character count
      if (currentLength > 1800) {
        charCount.classList.add('text-red-500');
        charCount.classList.remove('text-gray-500', 'text-yellow-500');
      } else if (currentLength > 1500) {
        charCount.classList.add('text-yellow-500');
        charCount.classList.remove('text-gray-500', 'text-red-500');
      } else {
        charCount.classList.add('text-gray-500');
        charCount.classList.remove('text-yellow-500', 'text-red-500');
      }
    });
  }

  // Form validation
  if (form) {
    form.addEventListener('submit', (e) => {
      const ideaText = textarea?.value || '';
      
      if (ideaText.length < 10) {
        e.preventDefault();
        if (charError) {
          charError.classList.remove('hidden');
        }
        textarea?.focus();
        return false;
      }
    });
  }
</script>