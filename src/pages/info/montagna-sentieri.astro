    document.addEventListener('DOMContentLoaded', function() {
      // Gestione toggle per i dettagli dei sentieri
      const buttons = document.querySelectorAll('[data-trail-details]');
      
      buttons.forEach(button => {
        button.addEventListener('click', function() {
          const targetId = this.getAttribute('data-trail-details');
          const targetElement = document.getElementById(targetId);
          const svg = this.querySelector('svg');
          
          if (targetElement) {
            if (targetElement.style.display === 'none') {
              targetElement.style.display = 'block';
              svg.style.transform = 'rotate(180deg)';
              this.querySelector('span').textContent = 'Nascondi';
            } else {
              targetElement.style.display = 'none';
              svg.style.transform = 'rotate(0deg)';
              this.querySelector('span').textContent = 'Dettagli';
            }
          }
        });
      });
    });
  </script>

  <script is:inline>
    function toggleContent(header) {
      const content = header.parentElement;
      const body = content.querySelector('.collapsible-body');
      const icon = header.querySelector('.expand-icon svg');
      
      if (body.style.display === 'none' || body.style.display === '') {
        // Espandi il contenuto
        body.style.display = 'block';
        icon.style.transform = 'rotate(180deg)';
        
        // Animazione smooth
        body.style.opacity = '0';
        body.style.transform = 'translateY(-10px)';
        
        setTimeout(() => {
          body.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
          body.style.opacity = '1';
          body.style.transform = 'translateY(0)';
        }, 10);
      } else {
        // Comprimi il contenuto
        body.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
        body.style.opacity = '0';
        body.style.transform = 'translateY(-10px)';
        icon.style.transform = 'rotate(0deg)';
        
        setTimeout(() => {
          body.style.display = 'none';
          body.style.transition = '';
        }, 300);
      }
    }

    // Inizializza tutti i contenuti come compressi
    document.addEventListener('DOMContentLoaded', function() {
      const allBodies = document.querySelectorAll('.collapsible-body');
      const allIcons = document.querySelectorAll('.expand-icon svg');
      
      allBodies.forEach(body => {
        body.style.display = 'none';
      });
      
      allIcons.forEach(icon => {
        icon.style.transform = 'rotate(0deg)';
      });
    });

    // Funzioni per le mappe
    function showMap(mapType) {
      // Nascondi tutte le mappe
      const allMaps = document.querySelectorAll('.map-container');
      allMaps.forEach(map => {
        map.classList.add('hidden');
      });

      // Mostra la mappa selezionata
      const selectedMap = document.getElementById('map-' + mapType);
      if (selectedMap) {
        selectedMap.classList.remove('hidden');
      }

      // Aggiorna i tab
      const allTabs = document.querySelectorAll('[id^="tab-"]');
      allTabs.forEach(tab => {
        if (tab.id.startsWith('tab-opentopomap') || 
            tab.id.startsWith('tab-windy')) {
          tab.className = 'px-3 py-2 text-sm font-medium text-gray-600 hover:bg-gray-50 rounded-t-lg';
        }
      });

      // Attiva il tab selezionato
      const activeTab = document.getElementById('tab-' + mapType);
      if (activeTab) {
        switch(mapType) {
          case 'opentopomap':
            activeTab.className = 'px-3 py-2 text-sm font-medium text-orange-600 border-b-2 border-orange-600 bg-orange-50 rounded-t-lg';
            break;
          case 'windy':
            activeTab.className = 'px-3 py-2 text-sm font-medium text-sky-600 border-b-2 border-sky-600 bg-sky-50 rounded-t-lg';
            break;
          default:
            activeTab.className = 'px-3 py-2 text-sm font-medium text-gray-600 border-b-2 border-gray-600 bg-gray-50 rounded-t-lg';
        }
        // Rimuovi il focus dal pulsante
        activeTab.blur();
      }
    }

    // Funzioni per Street View
    function showStreetView(location) {
      // Nascondi tutte le street view
      const allStreetViews = document.querySelectorAll('.streetview-container');
      allStreetViews.forEach(sv => {
        sv.classList.add('hidden');
      });

      // Mostra la street view selezionata
      const selectedStreetView = document.getElementById('streetview-' + location);
      if (selectedStreetView) {
        selectedStreetView.classList.remove('hidden');
      }

      // Aggiorna i tab
      const allTabs = document.querySelectorAll('[id^="tab-sv-"]');
      allTabs.forEach(tab => {
        tab.className = 'px-4 py-2 font-medium text-gray-600 hover:text-orange-600 hover:bg-orange-50 rounded-t-lg';
      });

      // Attiva il tab selezionato
      const activeTab = document.getElementById('tab-sv-' + location);
      if (activeTab) {
        activeTab.className = 'px-4 py-2 font-medium text-red-600 border-b-2 border-red-600 bg-red-50 rounded-t-lg';
        // Rimuovi il focus dal pulsante
        activeTab.blur();
      }
    }
