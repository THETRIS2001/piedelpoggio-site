<script is:inline>
  function toggleContent(header) {
    const content = header.parentElement;
    const body = content.querySelector('.collapsible-body');
    const icon = header.querySelector('.expand-icon svg');
    
    if (body.style.display === 'none' || body.style.display === '') {
      // Espandi il contenuto
      body.style.display = 'block';
      icon.style.transform = 'rotate(180deg)';
      
      // Animazione smooth
      body.style.opacity = '0';
      body.style.transform = 'translateY(-10px)';
      
      setTimeout(() => {
        body.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
        body.style.opacity = '1';
        body.style.transform = 'translateY(0)';
      }, 10);
    } else {
      // Comprimi il contenuto
      body.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
      body.style.opacity = '0';
      body.style.transform = 'translateY(-10px)';
      icon.style.transform = 'rotate(0deg)';
      
      setTimeout(() => {
        body.style.display = 'none';
        body.style.transition = '';
      }, 300);
    }
  }

  // Inizializza tutti i contenuti come compressi
  document.addEventListener('DOMContentLoaded', function() {
    const allBodies = document.querySelectorAll('.collapsible-body');
    const allIcons = document.querySelectorAll('.expand-icon svg');
    
    allBodies.forEach(body => {
      body.style.display = 'none';
    });
    
    allIcons.forEach(icon => {
      icon.style.transform = 'rotate(0deg)';
    });
  });
</script>