    function toggleSection(sectionId) {
      const section = document.getElementById(sectionId);
      const content = section.querySelector('.collapsible-body');
      const arrow = section.querySelector('.expand-icon');
      
      // Chiudi tutte le altre sezioni prima
      const allSections = ['diritto-ambientale', 'educazione-montagna', 'modelli-legali'];
      allSections.forEach(id => {
        if (id !== sectionId) {
          const otherSection = document.getElementById(id);
          const otherContent = otherSection.querySelector('.collapsible-body');
          const otherArrow = otherSection.querySelector('.expand-icon');
          
          if (otherContent.style.display === 'block') {
            // Chiudi l'altra sezione
            otherContent.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
            otherContent.style.opacity = '0';
            otherContent.style.transform = 'translateY(-10px)';
            otherArrow.style.transform = 'rotate(0deg)';
            
            setTimeout(() => {
              otherContent.style.display = 'none';
              otherContent.style.transition = '';
            }, 300);
          }
        }
      });
      
      if (content.style.display === 'none' || content.style.display === '') {
        // Espandi il contenuto
        content.style.display = 'block';
        arrow.style.transform = 'rotate(180deg)';
        
        // Animazione smooth
        content.style.opacity = '0';
        content.style.transform = 'translateY(-10px)';
        
        setTimeout(() => {
          content.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
          content.style.opacity = '1';
          content.style.transform = 'translateY(0)';
        }, 10);
      } else {
        // Comprimi il contenuto
        content.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
        content.style.opacity = '0';
        content.style.transform = 'translateY(-10px)';
        arrow.style.transform = 'rotate(0deg)';
        
        setTimeout(() => {
          content.style.display = 'none';
          content.style.transition = '';
        }, 300);
      }
    }
    
