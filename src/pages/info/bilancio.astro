---
import DefaultLayout from '../../layouts/DefaultLayout.astro';
---

<DefaultLayout 
  title="Bilancio - Piedelpoggio"
  description="Consulta il bilancio"
>
  <main class="min-h-screen bg-gradient-to-br from-green-50/30 via-white to-emerald-50/20">
    <!-- Hero Section -->
    <section class="relative min-h-[40vh] flex items-center justify-center overflow-hidden pt-16">
      <!-- Background with gradient -->
      <div class="absolute inset-0 bg-gradient-to-b from-green-100/60 via-green-50/40 to-transparent"></div>
      
      <!-- Decorative elements -->
      <div class="absolute top-10 left-10 w-32 h-32 bg-green-200/30 rounded-full blur-2xl animate-float"></div>
      <div class="absolute bottom-10 right-10 w-40 h-40 bg-emerald-200/30 rounded-full blur-2xl animate-float" style="animation-delay: -3s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-r from-green-100/20 to-emerald-100/20 rounded-full blur-3xl"></div>
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <div class="animate-fade-in">
          <div class="flex items-center justify-center mb-8">
            <div class="w-20 h-20 bg-gradient-to-br from-green-600 to-emerald-600 rounded-2xl flex items-center justify-center shadow-xl mr-6">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
              <span class="bg-gradient-to-r from-green-900 via-green-700 to-emerald-600 bg-clip-text text-transparent">
                BILANCIO E TRASPARENZA
              </span>
            </h1>
          </div>
          <div class="w-32 h-1.5 bg-gradient-to-r from-green-500 via-green-600 to-emerald-500 rounded-full mx-auto mb-8"></div>
          <p class="text-xl md:text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed font-medium">
            Consulta il bilancio
          </p>
    </section>

    <!-- Bilancio Corrente -->
    <section class="py-8 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8 md:p-12 mb-16">
          <div class="flex items-center space-x-4 mb-8">
            <div class="w-12 h-12 bg-gradient-to-r from-green-600 to-emerald-600 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <h2 class="text-3xl font-bold text-gray-900">Bilancio 2024</h2>
          </div>

          <!-- Tabella Bilancio -->
          <div class="overflow-x-auto">
            <table class="w-full bg-white rounded-xl shadow-lg overflow-hidden">
              <!-- Header -->
              <thead class="bg-gradient-to-r from-green-600 to-emerald-600 text-white">
                <tr>
                  <th class="px-6 py-4 text-left text-lg font-bold">Voce</th>
                  <th class="px-6 py-4 text-center text-lg font-bold">Entrate</th>
                  <th class="px-6 py-4 text-center text-lg font-bold">Uscite</th>
                </tr>
              </thead>
              
              <!-- Body -->
              <tbody class="divide-y divide-gray-200">
                <!-- Avanzo gestione al 31.12.2023 -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Avanzo gestione al 31.12.2023</td>
                  <td class="px-6 py-4 text-center text-green-700 font-bold">€ 4.302,99</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                </tr>
                
                <!-- Quote Associative -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Quote Associative n° 124</td>
                  <td class="px-6 py-4 text-center text-green-700 font-bold">€ 5.835,00</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                </tr>
                
                <!-- Ruota della Fortuna - Torneo Burraco - Gioco fagioli -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Ruota della Fortuna - Torneo Burraco - Gioco fagioli</td>
                  <td class="px-6 py-4 text-center text-green-700 font-bold">€ 1.671,00</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 954,79</td>
                </tr>
                
                <!-- Panini salsiccia, fettuccine -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Panini salsiccia, fettuccine</td>
                  <td class="px-6 py-4 text-center text-green-700 font-bold">€ 210,00</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 1.485,77</td>
                </tr>
                
                <!-- Manutenzione Campo Sportivo 2024 -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Manutenzione Campo Sportivo 2024</td>
                  <td class="px-6 py-4 text-center text-green-700 font-bold">€ 165,00</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                </tr>
                
                <!-- Manutenzione Campo Sportivo 2024 - Campo Pallavolo -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Manutenzione Campo Sportivo 2024 - Campo Pallavolo</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 509,67</td>
                </tr>
                
                <!-- Bollette ENEL 2023-2024 -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Bollette ENEL 2023-2024</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 1.179,05</td>
                </tr>
                
                <!-- Arredo Urbano - 35 sedie - ricostruzione carretto -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Arredo Urbano - 35 sedie - ricostruzione carretto</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 1.087,81</td>
                </tr>
                
                <!-- Assicurazione anno 2024/2025 -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Assicurazione anno 2024/2025</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 560,00</td>
                </tr>
                
                <!-- Sagome Presepe, Albero Natale, Accensione -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Sagome Presepe, Albero Natale, Accensione</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 494,87</td>
                </tr>
                
                <!-- Giochi della Gioventù - Pomeriggio Mago -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Giochi della Gioventù - Pomeriggio Mago</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 420,67</td>
                </tr>
                
                <!-- Offerta Parrocchia per uso strutture -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Offerta Parrocchia per uso strutture</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 400,00</td>
                </tr>
                
                <!-- Cancelleria, fotocopie, blocchetti ricevute -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Cancelleria, fotocopie, blocchetti ricevute</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 378,41</td>
                </tr>
                
                <!-- Deposizione Corona ai Caduti e rinfresco alpini -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Deposizione Corona ai Caduti e rinfresco alpini</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 165,64</td>
                </tr>
                
                <!-- Accoglienza Escursione CAI Leonessa -->
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-gray-900 font-medium">Accoglienza Escursione CAI Leonessa</td>
                  <td class="px-6 py-4 text-center text-gray-400">€ 0</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold">€ 32,32</td>
                </tr>
              </tbody>
              
              <!-- Footer con totali -->
              <tfoot class="bg-gray-100 border-t-2 border-gray-300">
                <tr>
                  <td class="px-6 py-4 text-gray-900 font-bold text-lg">TOTALI</td>
                  <td class="px-6 py-4 text-center text-green-700 font-bold text-lg">€ 12.183,99</td>
                  <td class="px-6 py-4 text-center text-red-700 font-bold text-lg">€ 7.669,00</td>
                </tr>
              </tfoot>
            </table>
          </div>

          <!-- Risultato -->
          <div class="mt-8 p-6 bg-gradient-to-r from-green-50 to-blue-50 rounded-xl border-2 border-green-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900">Risultato di Gestione 2024</h3>
                  <p class="text-gray-600">Avanzo destinato alle attività future</p>
                </div>
              </div>
              
              <div class="flex items-center space-x-6">
                <!-- Composizione del risultato -->
                <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-200 min-w-[280px]">
                  <h4 class="text-sm font-semibold text-gray-700 mb-3">Composizione:</h4>
                  <div class="space-y-2 text-sm">
                    <div class="flex justify-between items-center">
                      <span class="text-gray-600">C/C Postale:</span>
                      <span class="font-medium text-gray-900">€ 3.982,21</span>
                    </div>
                    <div class="flex justify-between items-center">
                      <span class="text-gray-600">Contanti:</span>
                      <span class="font-medium text-gray-900">€ 532,78</span>
                    </div>
                  </div>
                </div>
                
                <!-- Risultato e pulsante download -->
                <div class="text-right flex flex-col items-end space-y-3">
                  <span class="text-3xl font-bold text-green-700">+ € 4.514,99</span>
                  
                  <!-- Pulsanti Download e Anteprima Bilancio -->
                  <div class="flex flex-col space-y-3">
                    <a href="/documents/Bilancio 2024.jpg" download="Bilancio_2024.jpg" class="inline-flex items-center justify-center space-x-2 bg-gradient-to-r from-green-600 to-green-700 text-white px-6 py-3 rounded-xl text-sm font-semibold hover:from-green-700 hover:to-green-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                      </svg>
                      <span>Scarica Bilancio</span>
                    </a>
                    
                    <button id="previewBtn2024" data-image="/documents/Bilancio 2024.jpg" data-title="Bilancio 2024" class="inline-flex items-center justify-center space-x-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-3 rounded-xl text-sm font-semibold hover:from-blue-700 hover:to-blue-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      <span>Anteprima Bilancio</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Bilanci Precedenti -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
          <h2 class="col-span-full text-3xl font-bold text-gray-900 mb-8">Bilanci Precedenti</h2>
          
          <!-- Bilancio 2014 -->
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-all duration-300">
            <div class="flex items-center space-x-4 mb-6">
              <div class="w-16 h-16 bg-gradient-to-r from-orange-600 to-orange-700 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-lg">2014</span>
              </div>
              <h3 class="text-xl font-bold text-gray-900">Bilancio 2014</h3>
            </div>
            <div class="space-y-4">
              <div class="flex justify-between">
                <span class="text-gray-600">Entrate:</span>
                <span class="font-semibold text-green-600">€ 16.220,70</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Uscite:</span>
                <span class="font-semibold text-red-600">€ 8.904,41</span>
              </div>
              <div class="border-t pt-2 flex justify-between">
                <span class="font-bold text-gray-900">Risultato:</span>
                <span class="font-bold text-green-600">+ € 7.316,29</span>
              </div>
            </div>
            <div class="mt-6 space-y-2">
              <a href="/documents/Bilancio 2014.jpg" download="Bilancio_2014.jpg" class="w-full bg-orange-100 hover:bg-orange-200 text-orange-700 py-2 px-4 rounded-lg transition-colors duration-300 block text-center">
                Scarica
              </a>
              <button id="previewBtn2014" data-image="/documents/Bilancio 2014.jpg" data-title="Bilancio 2014" class="w-full bg-orange-50 hover:bg-orange-100 text-orange-600 py-2 px-4 rounded-lg transition-colors duration-300 border border-orange-200">
                Anteprima
              </button>
            </div>
          </div>
        </div>

        <!-- Informazioni per contatti -->
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-8 md:p-12">
          <p class="font-semibold text-gray-900 text-center">
            Per ulteriori informazioni sui bilanci o per richiedere documentazione aggiuntiva, 
            è possibile contattare direttamente l'organizzazione. Tutti i documenti sono 
            disponibili per la consultazione pubblica.
          </p>
        </div>
      </div>
    </section>
  </main>

  <!-- Modal per anteprima PDF -->
  <div id="pdfModal" class="fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center z-50 hidden cursor-pointer">
    <div class="relative w-full h-full max-w-6xl max-h-[90vh] m-4">
      <!-- Contenitore immagine -->
      <div class="w-full h-full flex items-center justify-center">
        <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg shadow-2xl">
      </div>
    </div>
  </div>

  <script>
    // Aspetta che il DOM sia caricato
    document.addEventListener('DOMContentLoaded', function() {
      // Aggiungi event listener per il pulsante anteprima 2024
      const previewBtn2024 = document.getElementById('previewBtn2024');
      if (previewBtn2024) {
        previewBtn2024.addEventListener('click', function() {
          const imageSrc = this.getAttribute('data-image');
          const title = this.getAttribute('data-title');
          openPdfModal(imageSrc, title);
        });
      }

      // Aggiungi event listener per il pulsante anteprima 2014
      const previewBtn2014 = document.getElementById('previewBtn2014');
      if (previewBtn2014) {
        previewBtn2014.addEventListener('click', function() {
          const imageSrc = this.getAttribute('data-image');
          const title = this.getAttribute('data-title');
          openPdfModal(imageSrc, title);
        });
      }

      // Chiudi il modal cliccando ovunque
      const modal = document.getElementById('pdfModal');
      if (modal) {
        modal.addEventListener('click', function() {
          closePdfModal();
        });
      }
    });

    function openPdfModal(imageSrc, title) {
      const modal = document.getElementById('pdfModal');
      const modalImage = document.getElementById('modalImage');
      
      if (modal && modalImage) {
        modalImage.src = imageSrc;
        modalImage.alt = title;
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }
    }

    function closePdfModal() {
      const modal = document.getElementById('pdfModal');
      if (modal) {
        modal.classList.add('hidden');
        document.body.style.overflow = 'unset';
      }
    }

    // Chiudi il modal con il tasto Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closePdfModal();
      }
    });
  </script>
</DefaultLayout>