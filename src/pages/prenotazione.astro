---
export const prerender = true;

import DefaultLayout from '../layouts/DefaultLayout.astro';
import BookingCalendar from '../components/BookingCalendar.tsx';
---

<DefaultLayout title="Prenotazione - Piedelpoggio" description="Prenotazione Campo Sportivo: calendario disponibilità e fasce orarie.">
  <main class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="hero-section">
      <!-- Background with gradient -->
      <div class="absolute inset-0 bg-gradient-to-b from-green-100/60 via-green-50/40 to-transparent"></div>
      
      <!-- Decorative elements -->
      
      
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <div class="animate-fade-in">
          <div class="flex items-center justify-center mb-8">
            <div class="hidden md:flex w-20 h-20 rounded-xl sm:rounded-2xl items-center justify-center shadow-xl mr-6" style="background: linear-gradient(135deg, #10B981, #059669);">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
              <span style="background: linear-gradient(135deg, #10B981, #059669, #10B981); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                PRENOTAZIONE CAMPO
              </span>
            </h1>
          </div>
          <div class="w-32 h-1.5 rounded-full mx-auto mb-8" style="background: linear-gradient(90deg, #10B981, #059669, #10B981);"></div>
          <p class="text-lg md:text-xl lg:text-2xl text-gray-600 max-w-4xl mx-auto leading-relaxed font-medium mb-6 md:mb-16">
            Seleziona un giorno e una fascia oraria per prenotare il campo sportivo
          </p>
          
          <!-- Compact Cost Information -->
          <div class="max-w-2xl mx-auto">
            <div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-sm border border-gray-200 p-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 rounded-lg flex items-center justify-center bg-amber-100">
                    <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                    </svg>
                  </div>
                  <div>
                    <span class="text-sm text-gray-600">Costo affitto:</span>
                    <span class="ml-2 text-lg font-semibold text-amber-700">20€</span>
                  </div>
                </div>
                <a href="/info/contatti" class="inline-flex items-center space-x-1 text-sm bg-amber-50 text-amber-700 px-3 py-1 text-xs md:text-sm font-medium.5 rounded-lg hover:bg-amber-100 transition-colors duration-200 border border-amber-200">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                  <span>Contatti</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main content: booking calendar -->
    <section class="pt-4 pb-6 sm:pb-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="bg-white rounded-xl sm:rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
          <div class="p-6 md:p-12">
            <BookingCalendar client:load />
          </div>
        </div>
      </div>
    </section>
  </main>
</DefaultLayout>
