---
export const prerender = true;

import { getCollection } from 'astro:content';
import DefaultLayout from '../../layouts/DefaultLayout.astro';
import Card from '../../components/Card.astro';
import { SITE_CONFIG } from '../../utils/config';
import { getAllEventsOrdered, getUpcomingEvents, getPastEvents } from '../../utils/events';
import { isUpcoming } from '../../utils/date';

// Usa le utility condivise per caricare gli eventi
const upcomingEvents = await getUpcomingEvents();
const pastEvents = await getPastEvents();
const allEvents = await getAllEventsOrdered();

const itemsPerPage = SITE_CONFIG.collections.events.perPage;

// Immagini della galleria per gli eventi
const galleryImages = [
  "/images/1.jpg",
  "/images/2.jpg", 
  "/images/3.jpg",
  "/images/4.jpg",
  "/images/5.jpg",
  "/images/6.jpg",
  "/images/7.jpg",
  "/images/8.jpg",
  "/images/9.jpg",
  "/images/10.jpg",
  "/images/11.jpg",
  "/images/12.jpg",
  "/images/13.jpg",
  "/images/14.jpg",
  "/images/15.jpg",
  "/images/16.jpg",
  "/images/17.jpg",
  "/images/18.jpg",
  "/images/19.jpg",
  "/images/20.jpg"
];
---

<DefaultLayout title="Eventi - Piedelpoggio" description="Tutti gli eventi e le manifestazioni di Piedelpoggio, borgo medievale nel cuore del Lazio.">
  <main class="min-h-screen bg-gradient-to-br from-red-50/30 via-white to-orange-50/20">
    <!-- Hero Section -->
    <section class="hero-section">
      <!-- Background with gradient -->
      <div class="absolute inset-0 bg-gradient-to-b from-red-100/70 via-red-50/50 to-transparent"></div>
      
      <!-- Decorative elements -->
      
      
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full blur-3xl opacity-40" style="background: radial-gradient(circle, rgba(255, 36, 0, 0.12) 0%, rgba(255, 36, 0, 0.04) 60%, transparent 100%);"></div>
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <div class="animate-fade-in">
          <div class="flex items-center justify-center mb-8">
            <div class="hidden md:flex w-20 h-20 rounded-2xl items-center justify-center shadow-xl mr-6" style="background: linear-gradient(135deg, #FF2400, #E01E00);">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
              <span class="bg-gradient-to-r from-red-700 via-red-600 to-red-500 bg-clip-text text-transparent">
                EVENTI
              </span>
            </h1>
          </div>
          <div class="w-32 h-1.5 rounded-full mx-auto mb-8" style="background: linear-gradient(to right, #FF2400, #E01E00, #CC1A00);"></div>
          <p class="text-xl md:text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed font-medium">
            Scopri tutti gli eventi e le manifestazioni di Piedelpoggio
          </p>
          <div class="flex flex-wrap justify-center gap-3 mt-8 mb-6">
            <span class="px-4 py-2 rounded-full text-sm font-medium text-red-700 bg-red-50 border border-red-200 shadow-sm">
              Prossimi Eventi
            </span>
            <span class="px-4 py-2 rounded-full text-sm font-medium text-orange-700 bg-orange-50 border border-orange-200 shadow-sm">
              Manifestazioni
            </span>
            <span class="px-4 py-2 rounded-full text-sm font-medium text-pink-700 bg-pink-50 border border-pink-200 shadow-sm">
              Celebrazioni
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Contenuto principale -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        
        <!-- Sezione Programma Estivo -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-soft border border-gray-100 p-8">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, #FF2400, #E01E00);">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <div>
                  <h2 class="text-2xl font-bold text-gray-900">Programma Estivo</h2>
                  <p class="text-gray-600">Tutte le attività previste per il mese estivo</p>
                </div>
              </div>
              
              <a 
                href="/documents/programma.pdf" 
                target="_blank"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-white font-medium transition-all duration-300 hover:shadow-lg hover:scale-105"
                style="background: linear-gradient(135deg, #FF2400, #E01E00);"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Scarica PDF
              </a>
            </div>
            
            <!-- PDF Espanso -->
            <div class="w-full h-96 rounded-lg overflow-auto border border-gray-300 bg-white">
              <iframe 
                src="/documents/programma.pdf#toolbar=0&navpanes=0&scrollbar=1&zoom=FitH&view=FitH" 
                width="100%" 
                height="100%"
                class="rounded-lg"
                style="border: none;"
              ></iframe>
            </div>
            
            <!-- Programmi Precedenti -->
            <div class="mt-12">
              <h3 class="text-2xl font-bold text-gray-900 mb-8">Programmi Precedenti</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                
                <!-- Programma 2023 -->
                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-6 hover:shadow-2xl transition-all duration-300">
                  <div class="flex items-center space-x-4 mb-6">
                    <div class="w-16 h-16 bg-gradient-to-r from-red-500 to-red-600 rounded-lg flex items-center justify-center">
                      <span class="text-white font-bold text-lg">2023</span>
                    </div>
                    <h4 class="text-xl font-bold text-gray-900">Programma 2023</h4>
                  </div>
                  <div class="space-y-3">
                    <p class="text-gray-600 text-sm">
                      Programma completo delle attività estive dell'anno 2023
                    </p>
                  </div>
                  <div class="mt-6">
                    <a href="/documents/programma.pdf" target="_blank" class="w-full bg-red-100 hover:bg-red-200 text-red-700 py-3 px-4 rounded-lg transition-colors duration-300 block text-center font-medium inline-flex items-center justify-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      Anteprima PDF
                    </a>
                  </div>
                </div>

                <!-- Programma 2022 -->
                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-6 hover:shadow-2xl transition-all duration-300">
                  <div class="flex items-center space-x-4 mb-6">
                    <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-orange-600 rounded-lg flex items-center justify-center">
                      <span class="text-white font-bold text-lg">2022</span>
                    </div>
                    <h4 class="text-xl font-bold text-gray-900">Programma 2022</h4>
                  </div>
                  <div class="space-y-3">
                    <p class="text-gray-600 text-sm">
                      Programma completo delle attività estive dell'anno 2022
                    </p>
                  </div>
                  <div class="mt-6">
                    <a href="/documents/programma.pdf" target="_blank" class="w-full bg-orange-100 hover:bg-orange-200 text-orange-700 py-3 px-4 rounded-lg transition-colors duration-300 block text-center font-medium inline-flex items-center justify-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      Anteprima PDF
                    </a>
                  </div>
                </div>

                <!-- Programma 2021 -->
                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl p-6 hover:shadow-2xl transition-all duration-300">
                  <div class="flex items-center space-x-4 mb-6">
                    <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
                      <span class="text-white font-bold text-lg">2021</span>
                    </div>
                    <h4 class="text-xl font-bold text-gray-900">Programma 2021</h4>
                  </div>
                  <div class="space-y-3">
                    <p class="text-gray-600 text-sm">
                      Programma completo delle attività estive dell'anno 2021
                    </p>
                  </div>
                  <div class="mt-6">
                    <a href="/documents/programma.pdf" target="_blank" class="w-full bg-blue-100 hover:bg-blue-200 text-blue-700 py-3 px-4 rounded-lg transition-colors duration-300 block text-center font-medium inline-flex items-center justify-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      Anteprima PDF
                    </a>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
        
        <!-- Filtro per Data e Tipo -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-soft border border-gray-100 p-7">
            <div class="flex flex-col md:flex-row items-center justify-between gap-5">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, #FF2400, #E01E00);">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">Filtra Eventi</h3>
                  <p class="text-sm text-gray-600">Seleziona per tipo e periodo</p>
                </div>
              </div>
              
              <div class="flex flex-col sm:flex-row gap-4 w-full md:w-auto">
                <!-- Filtro per Tipo -->
                <div class="relative">
                  <label class="block text-xs font-medium text-gray-700 mb-1">Tipo Evento</label>
                  <select 
                    id="eventType"
                    class="px-4 py-2 border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm text-gray-700 min-w-[150px]"
                  >
                    <option value="all">Tutti gli Eventi</option>
                    <option value="upcoming">Prossimi Eventi</option>
                    <option value="past">Eventi Passati</option>
                  </select>
                </div>
                
                <!-- Filtro per Data -->
                <div class="relative">
                  <label class="block text-xs font-medium text-gray-700 mb-1">Data Inizio</label>
                  <input 
                    type="date" 
                    id="dateFrom"
                    class="px-4 py-2 border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm text-gray-500 min-w-[150px]"
                  />
                </div>
                <div class="relative">
                  <label class="block text-xs font-medium text-gray-700 mb-1">Data Fine</label>
                  <input 
                    type="date" 
                    id="dateTo"
                    class="px-4 py-2 border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm text-gray-500 min-w-[150px]"
                  />
                </div>
                <div class="flex gap-3 items-end">
                  <button 
                    id="applyFilter"
                    class="px-6 py-2 rounded-xl text-white font-medium transition-all duration-300 hover:shadow-lg hover:scale-105"
                    style="background: linear-gradient(135deg, #E01E00, #CC1A00);"
                  >
                    Applica
                  </button>
                  <button 
                    id="clearFilter"
                    class="px-5 py-2 rounded-xl border border-gray-200 text-gray-600 font-medium hover:bg-gray-50 transition-all duration-200"
                  >
                    Reset
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Lista Eventi -->
        <div class="max-w-6xl mx-auto" id="eventsContainer">
          {allEvents.length > 0 ? (
            <div class="space-y-6" id="eventsList">
              {allEvents.slice(0, itemsPerPage).map((item, index) => {
                const isUpcomingEvent = isUpcoming(item.data.startsAt);
                return (
                  <div class="event-item bg-white/90 backdrop-blur-sm rounded-2xl shadow-soft border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300 hover:scale-[1.02]" data-date={item.data.startsAt}>
                    <div class="md:flex md:h-64">
                      <div class="md:w-1/3">
                        <img 
                          src={item.data.cover || galleryImages[index % galleryImages.length]} 
                          alt={item.data.title}
                          class={`w-full h-48 md:h-full object-cover ${!isUpcomingEvent ? 'grayscale' : ''}`}
                        />
                      </div>
                      <div class="md:w-2/3 p-6 md:p-8 flex flex-col justify-between">
                        <div>
                          <div class="flex items-center gap-3 mb-3">
                             <span class={`px-3 py-1 rounded-full text-xs font-medium ${isUpcomingEvent ? 'text-red-700 bg-red-100 border border-red-200' : 'text-gray-600 bg-gray-100 border border-gray-200'}`}>
                               {isUpcomingEvent ? 'Prossimo Evento' : 'Evento Passato'}
                             </span>
                             <span class="text-sm text-gray-500">
                               {new Date(item.data.startsAt).toLocaleDateString('it-IT', { 
                                 year: 'numeric', 
                                 month: 'long', 
                                 day: 'numeric' 
                               })}
                             </span>
                           </div>
                           <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-3 leading-tight">
                             {item.data.title}
                           </h3>
                           <p class="text-gray-600 mb-4 leading-relaxed">
                             {item.data.summary || 'Scopri tutti i dettagli di questo evento speciale di Piedelpoggio.'}
                           </p>
                        </div>
                        <div>
                           <a 
                             href={`/eventi/${item.slug}`}
                             class={`inline-flex items-center gap-2 px-6 py-3 rounded-xl font-medium transition-all duration-300 hover:shadow-lg hover:scale-105 ${isUpcomingEvent ? 'text-white' : 'text-white'}`}
                             style={isUpcomingEvent ? "background: linear-gradient(135deg, #E01E00, #CC1A00);" : "background: rgba(130, 61, 61, 0.7);"}
                           >
                             Leggi di più
                             <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                             </svg>
                           </a>
                        </div>
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          ) : (
            <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-soft p-12 border border-gray-100 text-center" id="noEventsMessage">
              <div class="w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6" style="background: linear-gradient(135deg, #FF2400, #E01E00);">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Nessun evento trovato</h3>
              <p class="text-gray-600 mb-6">Non ci sono eventi che corrispondono ai criteri di ricerca selezionati.</p>
              <button 
                id="clearAllFilters"
                class="px-6 py-3 rounded-xl text-white font-medium transition-all duration-300 hover:shadow-lg hover:scale-105"
                style="background: linear-gradient(135deg, #FF2400, #E01E00);"
              >
                Mostra tutti gli eventi
              </button>
            </div>
          )}
        </div>
      </div>
    </section>
  </main>

  <script>
    // Funzionalità di filtro per data
    document.addEventListener('DOMContentLoaded', function() {
      const dateFromInput = document.getElementById('dateFrom');
      const dateToInput = document.getElementById('dateTo');
      const eventTypeSelect = document.getElementById('eventType');
      const applyFilterBtn = document.getElementById('applyFilter');
      const clearFilterBtn = document.getElementById('clearFilter');
      const clearAllFiltersBtn = document.getElementById('clearAllFilters');
      const eventsList = document.getElementById('eventsList');
      const eventsContainer = document.getElementById('eventsContainer');
      const noEventsMessage = document.getElementById('noEventsMessage');

      let allEventItems = [];

      // Salva tutti gli elementi evento all'avvio
      if (eventsList) {
        allEventItems = Array.from(eventsList.querySelectorAll('.event-item'));
      }

      function filterEvents() {
        const dateFrom = dateFromInput?.value ? new Date(dateFromInput.value) : null;
        const dateTo = dateToInput?.value ? new Date(dateToInput.value) : null;
        const eventType = eventTypeSelect?.value || 'all';

        if (!eventsList || allEventItems.length === 0) return;

        let visibleCount = 0;
        const today = new Date();
        today.setHours(0, 0, 0, 0);

        allEventItems.forEach(item => {
          const eventDate = new Date(item.dataset.date);
          const isUpcoming = eventDate >= today;
          let shouldShow = true;

          // Filtro per data
          if (dateFrom && eventDate < dateFrom) {
            shouldShow = false;
          }
          if (dateTo && eventDate > dateTo) {
            shouldShow = false;
          }

          // Filtro per tipo di evento
          if (eventType === 'upcoming' && !isUpcoming) {
            shouldShow = false;
          }
          if (eventType === 'past' && isUpcoming) {
            shouldShow = false;
          }

          if (shouldShow) {
            item.style.display = 'block';
            visibleCount++;
          } else {
            item.style.display = 'none';
          }
        });

        // Mostra/nascondi messaggio "nessun evento"
        if (visibleCount === 0) {
          if (eventsList) eventsList.style.display = 'none';
          if (noEventsMessage) noEventsMessage.style.display = 'block';
        } else {
          if (eventsList) eventsList.style.display = 'block';
          if (noEventsMessage) noEventsMessage.style.display = 'none';
        }
      }

      function clearFilters() {
        if (dateFromInput) dateFromInput.value = '';
        if (dateToInput) dateToInput.value = '';
        if (eventTypeSelect) eventTypeSelect.value = 'all';
        
        allEventItems.forEach(item => {
          item.style.display = 'block';
        });

        if (eventsList) eventsList.style.display = 'block';
        if (noEventsMessage) noEventsMessage.style.display = 'none';
      }

      // Event listeners
      applyFilterBtn?.addEventListener('click', filterEvents);
      clearFilterBtn?.addEventListener('click', clearFilters);
      clearAllFiltersBtn?.addEventListener('click', clearFilters);
      eventTypeSelect?.addEventListener('change', filterEvents);

      // Filtro automatico quando cambiano le date
      dateFromInput?.addEventListener('change', filterEvents);
      dateToInput?.addEventListener('change', filterEvents);
    });
  </script>
</DefaultLayout>
