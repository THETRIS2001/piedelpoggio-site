---
export const prerender = true;

import { getCollection } from 'astro:content';
import DefaultLayout from '../../layouts/DefaultLayout.astro';
import { formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const news = await getCollection('news', ({ data }) => data.published);
  return news.map((item) => ({
    params: { slug: item.slug },
    props: { item },
  }));
}

const { item } = Astro.props;
const { Content } = await item.render();
---

<DefaultLayout 
  title={`${item.data.title} - Piedelpoggio`} 
  description={item.data.summary}
>
  <article class="container mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-primary-600">Home</a></li>
        <li>/</li>
        <li><a href="/notizie" class="hover:text-primary-600">Notizie</a></li>
        <li>/</li>
        <li class="text-gray-900">{item.data.title}</li>
      </ol>
    </nav>

    <!-- Header dell'articolo -->
    <header class="mb-8">
      <div class="mb-4">
        <span class="inline-block bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-medium">
          Notizie
        </span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {item.data.title}
      </h1>
      <div class="flex items-center text-gray-600 mb-6">
        <time datetime={item.data.date.toISOString()}>
          {formatDate(item.data.date)}
        </time>
      </div>
      {item.data.summary && (
        <p class="text-xl text-gray-700 leading-relaxed">
          {item.data.summary}
        </p>
      )}
    </header>

    <!-- Contenuto dell'articolo -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Footer dell'articolo -->
    <footer class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex justify-center">
        <a 
          href="/notizie" 
          class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
        >
          ‚Üê Torna alle notizie
        </a>
      </div>
    </footer>
  </article>
</DefaultLayout>