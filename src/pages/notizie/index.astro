---
import { getCollection } from 'astro:content';
import DefaultLayout from '../../layouts/DefaultLayout.astro';
import Card from '../../components/Card.astro';
import { SITE_CONFIG } from '../../utils/config';

const news = await getCollection('news', ({ data }) => data.published);
const sortedNews = news.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Paginazione semplice
const currentPage = 1;
const itemsPerPage = SITE_CONFIG.collections.news.perPage;
const totalPages = Math.ceil(sortedNews.length / itemsPerPage);
const paginatedNews = sortedNews.slice(0, itemsPerPage);

// Immagini della galleria per le notizie
const galleryImages = [
  "/images/1.jpg",
  "/images/2.jpg", 
  "/images/3.jpg",
  "/images/4.jpg",
  "/images/5.jpg",
  "/images/6.jpg",
  "/images/7.jpg",
  "/images/8.jpg",
  "/images/9.jpg",
  "/images/10.jpg",
  "/images/11.jpg",
  "/images/12.jpg",
  "/images/13.jpg",
  "/images/14.jpg",
  "/images/15.jpg",
  "/images/16.jpg",
  "/images/17.jpg",
  "/images/18.jpg",
  "/images/19.jpg",
  "/images/20.jpg"
];
---

<DefaultLayout title="Notizie - Piedelpoggio" description="Tutte le notizie e gli aggiornamenti da Piedelpoggio, borgo medievale nel cuore del Lazio.">
  <main class="min-h-screen bg-gradient-to-br from-pink-50/30 via-white to-purple-50/20">
    <!-- Hero Section -->
    <section class="relative min-h-[40vh] flex items-center justify-center overflow-hidden pt-16">
      <!-- Background with gradient -->
      <div class="absolute inset-0 bg-gradient-to-b from-teal-100/70 via-teal-50/50 to-transparent"></div>
      
      <!-- Decorative elements -->
      <div class="absolute top-10 left-10 w-32 h-32 rounded-full blur-3xl animate-float" style="background: radial-gradient(circle, rgba(48, 213, 200, 0.25) 0%, rgba(48, 213, 200, 0.08) 70%, transparent 100%);"></div>
      <div class="absolute bottom-10 right-10 w-40 h-40 rounded-full blur-3xl animate-float" style="animation-delay: -3s; background: radial-gradient(circle, rgba(38, 181, 170, 0.2) 0%, rgba(38, 181, 170, 0.06) 70%, transparent 100%);"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full blur-3xl opacity-40" style="background: radial-gradient(circle, rgba(29, 155, 140, 0.12) 0%, rgba(29, 155, 140, 0.04) 60%, transparent 100%);"></div>
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <div class="animate-fade-in">
          <div class="flex items-center justify-center mb-8">
            <div class="w-20 h-20 rounded-2xl flex items-center justify-center shadow-xl mr-6" style="background: linear-gradient(135deg, #30D5C8, #26B5AA);">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
              <span class="bg-gradient-to-r from-teal-700 via-teal-600 to-teal-500 bg-clip-text text-transparent">
                NOTIZIE
              </span>
            </h1>
          </div>
          <div class="w-32 h-1.5 rounded-full mx-auto mb-8" style="background: linear-gradient(to right, #30D5C8, #26B5AA, #1D9B8C);"></div>
          <p class="text-xl md:text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed font-medium">
            Rimani aggiornato su tutte le novità di Piedelpoggio
          </p>
          <div class="flex flex-wrap justify-center gap-3 mt-8 mb-6">
            <span class="px-4 py-2 rounded-full text-sm font-medium text-white" style="background-color: #30D5C8;">Aggiornamenti</span>
            <span class="px-4 py-2 rounded-full text-sm font-medium text-white" style="background-color: #26B5AA;">Eventi</span>
            <span class="px-4 py-2 rounded-full text-sm font-medium text-white" style="background-color: #1D9B8C;">Comunicazioni</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Contenuto principale -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        
        <!-- Filtro per Data -->
        <div class="max-w-5xl mx-auto mb-12">
          <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-soft border border-gray-100 p-7">
            <div class="flex flex-col md:flex-row items-center justify-between gap-5">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, #30D5C8, #26B5AA);">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">Filtra per Data</h3>
                  <p class="text-sm text-gray-600">Seleziona un periodo per visualizzare le notizie</p>
                </div>
              </div>
              
              <div class="flex flex-col sm:flex-row gap-4 w-full md:w-auto">
                <div class="relative">
                  <label class="block text-xs font-medium text-gray-700 mb-1">Data Inizio</label>
                  <input 
                    type="date" 
                    id="dateFrom"
                    class="px-4 py-2 border border-gray-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm text-gray-500 min-w-[150px]"
                  />
                </div>
                <div class="relative">
                  <label class="block text-xs font-medium text-gray-700 mb-1">Data Fine</label>
                  <input 
                    type="date" 
                    id="dateTo"
                    class="px-4 py-2 border border-gray-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm text-gray-500 min-w-[150px]"
                  />
                </div>
                <div class="flex gap-3 items-end">
                  <button 
                    id="applyFilter"
                    class="px-6 py-2 rounded-xl text-white font-medium transition-all duration-300 hover:shadow-lg hover:scale-105"
                    style="background: linear-gradient(135deg, #26B5AA, #1D9B8C);"
                  >
                    Applica
                  </button>
                  <button 
                    id="clearFilter"
                    class="px-5 py-2 rounded-xl border border-gray-200 text-gray-600 font-medium hover:bg-gray-50 transition-all duration-200"
                  >
                    Reset
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Lista Notizie -->
        <div class="max-w-6xl mx-auto" id="newsContainer">
          {paginatedNews.length > 0 ? (
            <div class="space-y-6" id="newsList">
              {paginatedNews.map((item, index) => (
                <div class="news-item bg-white/90 backdrop-blur-sm rounded-2xl shadow-soft border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300 hover:scale-[1.02]" data-date={item.data.date}>
                  <div class="md:flex md:h-64">
                    <div class="md:w-1/3">
                      <img 
                        src={item.data.cover || galleryImages[index % galleryImages.length]} 
                        alt={item.data.title}
                        class="w-full h-48 md:h-full object-cover"
                      />
                    </div>
                    <div class="md:w-2/3 p-6 md:p-8 flex flex-col justify-between">
                      <div>
                        <div class="flex items-center gap-3 mb-3">
                           <span class="px-3 py-1 rounded-full text-xs font-medium text-white" style="background-color: #26B5AA;">
                             Notizie
                           </span>
                           <span class="text-sm text-gray-500">
                             {new Date(item.data.date).toLocaleDateString('it-IT', { 
                               year: 'numeric', 
                               month: 'long', 
                               day: 'numeric' 
                             })}
                           </span>
                         </div>
                         <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-3 leading-tight">
                           {item.data.title}
                         </h3>
                         <p class="text-gray-600 mb-4 leading-relaxed">
                           {item.data.summary}
                         </p>
                      </div>
                      <div>
                         <a 
                           href={`/notizie/${item.slug}`}
                           class="inline-flex items-center gap-2 px-6 py-3 rounded-xl text-white font-medium transition-all duration-300 hover:shadow-lg hover:scale-105"
                           style="background: linear-gradient(135deg, #26B5AA, #1D9B8C);"
                         >
                           Leggi di più
                           <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                           </svg>
                         </a>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
              
              <!-- Paginazione -->
              {totalPages > 1 && (
                <div class="flex justify-center mt-12">
                  <div class="flex space-x-2">
                    <span class="px-4 py-2 text-white rounded-lg shadow-sm" style="background-color: #30D5C8;">1</span>
                    {Array.from({ length: totalPages - 1 }, (_, i) => (
                      <span class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 cursor-pointer transition-colors">
                        {i + 2}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-soft p-12 border border-gray-100 text-center" id="noNewsMessage">
              <div class="w-16 h-16 rounded-2xl flex items-center justify-center shadow-lg mx-auto mb-6" style="background: linear-gradient(135deg, #30D5C8, #26B5AA);">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Nessuna notizia disponibile</h3>
              <p class="text-gray-500">Le notizie verranno pubblicate qui non appena disponibili.</p>
            </div>
          )}
        </div>
      </div>
    </section>
  </main>
</DefaultLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const dateFrom = document.getElementById('dateFrom');
    const dateTo = document.getElementById('dateTo');
    const applyFilter = document.getElementById('applyFilter');
    const clearFilter = document.getElementById('clearFilter');
    const newsItems = document.querySelectorAll('.news-item');
    const noNewsMessage = document.getElementById('noNewsMessage');
    
    function filterNews() {
      const fromDate = dateFrom.value ? new Date(dateFrom.value) : null;
      const toDate = dateTo.value ? new Date(dateTo.value) : null;
      let visibleCount = 0;
      
      newsItems.forEach(item => {
        const itemDate = new Date(item.dataset.date);
        let shouldShow = true;
        
        if (fromDate && itemDate < fromDate) {
          shouldShow = false;
        }
        
        if (toDate && itemDate > toDate) {
          shouldShow = false;
        }
        
        if (shouldShow) {
          item.style.display = 'block';
          item.style.animation = 'fadeIn 0.5s ease-in-out';
          visibleCount++;
        } else {
          item.style.display = 'none';
        }
      });
      
      // Mostra/nascondi messaggio "nessuna notizia"
      if (visibleCount === 0 && (fromDate || toDate)) {
        if (noNewsMessage) {
          noNewsMessage.style.display = 'block';
          noNewsMessage.querySelector('h3').textContent = 'Nessuna notizia trovata';
          noNewsMessage.querySelector('p').textContent = 'Non ci sono notizie nel periodo selezionato. Prova a modificare i filtri.';
        }
      } else if (noNewsMessage) {
        noNewsMessage.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    }
    
    function clearFilters() {
      dateFrom.value = '';
      dateTo.value = '';
      
      newsItems.forEach(item => {
        item.style.display = 'block';
        item.style.animation = 'fadeIn 0.5s ease-in-out';
      });
      
      if (noNewsMessage) {
        noNewsMessage.style.display = newsItems.length === 0 ? 'block' : 'none';
        if (newsItems.length === 0) {
          noNewsMessage.querySelector('h3').textContent = 'Nessuna notizia disponibile';
          noNewsMessage.querySelector('p').textContent = 'Le notizie verranno pubblicate qui non appena disponibili.';
        }
      }
    }
    
    // Event listeners
    applyFilter.addEventListener('click', filterNews);
    clearFilter.addEventListener('click', clearFilters);
    
    // Filtro automatico quando si cambiano le date
    dateFrom.addEventListener('change', filterNews);
    dateTo.addEventListener('change', filterNews);
  });
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>